<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ContentItems.Cell.CardView">

    <com.krake.core.media.widget.LoadableImageView
        android:id="@+id/cellImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/cellTextView"
        style="@style/ContentItems.Cell.Title.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:tag="@string/cell_selection_view_tag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground" />
</android.support.v7.widget.CardView>