<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:orientation="vertical">

    <com.krake.core.media.widget.LoadableImageView
            android:id="@+id/tripDirectionImageView"
            style="@style/TripDirectionImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toTopOf="@+id/tripEndTimeTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tripStartTimeTextView"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tripNameTextView"
            style="@style/TripCell.TransitLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="20dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="Tempo"
            app:layout_constraintBottom_toBottomOf="@+id/tripDirectionImageView"
            app:layout_constraintLeft_toLeftOf="@+id/tripStartTransitNameTextView"
            app:layout_constraintTop_toTopOf="@+id/tripDirectionImageView"
            tools:layout_constraintLeft_creator="1"/>

    <TextView
            android:id="@+id/tripDistanceTextView"
            style="@style/TripCell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="distanza"
            app:layout_constraintBottom_toTopOf="@+id/tripArrivalTransitNameTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tripNameTextView"
            app:layout_constraintTop_toBottomOf="@+id/tripStartTransitNameTextView"/>

    <TextView
            android:id="@+id/tripStartTimeTextView"
            style="@style/TripCell.TransitTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:minWidth="50dp"
            android:text="00:Str"
            app:layout_constraintBottom_toTopOf="@+id/tripDirectionImageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"/>

    <TextView
            android:id="@+id/tripEndTimeTextView"
            style="@style/TripCell.TransitTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:minWidth="50dp"
            android:text="00:End"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tripDirectionImageView"/>

    <TextView
            android:id="@+id/tripStartTransitNameTextView"
            style="@style/TripCell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Partenza"
            app:layout_constraintBottom_toBottomOf="@+id/tripStartTimeTextView"
            app:layout_constraintLeft_toRightOf="@+id/tripStartTimeTextView"
            app:layout_constraintTop_toTopOf="@+id/tripStartTimeTextView"
            app:layout_constraintVertical_bias="0.4"/>

    <TextView
            android:id="@+id/tripArrivalTransitNameTextView"
            style="@style/TripCell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Arrivo"
            app:layout_constraintBottom_toBottomOf="@+id/tripEndTimeTextView"
            app:layout_constraintLeft_toRightOf="@+id/tripEndTimeTextView"
            app:layout_constraintTop_toTopOf="@+id/tripEndTimeTextView"
            app:layout_constraintVertical_bias="0.6"/>

</androidx.constraintlayout.widget.ConstraintLayout>