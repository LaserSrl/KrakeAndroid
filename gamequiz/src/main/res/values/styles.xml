<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GameCell" parent="ContentItems.Cell">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="GameCell.Image" parent="ContentItems.Cell.Image">

    </style>

    <style name="GameCell.Title" parent="ContentItems.Cell.Title" />

    <style name="GameCell.TextContainer">
        <item name="android:textColor">?attr/itemTextColor</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="GameCell.Abstract">
        <item name="android:visibility">gone</item>
    </style>

    <style name="GameCell.Status">
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayGame" />

    <style name="PlayGame.WelcomeText">

        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="PlayGame.PointsContainer" />

    <style name="PlayGame.Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/questionImageMaxHeight</item>
        <item name="android:paddingBottom">@dimen/content_details_internal_padding</item>
    </style>

    <style name="PlayGame.Question">
        <item name="android:layout_marginBottom">@dimen/content_details_internal_padding</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="PlayGame.AnswerRow" parent="android:Widget">
        <item name="elevation">1dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginBottom">@dimen/content_details_internal_padding</item>
        <item name="android:minHeight">@dimen/answer_button_min_height</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="PlayGame.AnswerRow.Number" parent="">

        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="PlayGame.AnswerRow.Text" parent="">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="PlayGame.PointsToolbar">
        <item name="android:stateListAnimator">@animator/button_elevation</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="elevation">2dp</item>
        <item name="android:elevation">2dp</item>
    </style>


    <style name="PlayGame.ToolbarText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="PlayGame.TimeLeftText" parent="PlayGame.ToolbarText">
        <item name="android:drawableLeft">@drawable/ic_alarm</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="PlayGame.PointsText" parent="PlayGame.ToolbarText">
        <item name="android:drawableRight">@drawable/ic_star_empty</item>

        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="PlayGame.EndPointsBack">
        <item name="android:background">@drawable/point_circle_background</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PlayGame.EndPoints">
        <item name="android:textColor">@color/end_point_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="TotalPointsText">
        <item name="android:drawableRight">@drawable/ic_star</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="QuestionAnswerTitle">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/content_details_internal_padding</item>
        <item name="android:layout_marginBottom">@dimen/content_details_internal_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="QuestionAnswerSubtitle">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BeginGame" />

    <style name="BeginGame.Image">
        <item name="android:scaleType">centerCrop</item>
        <item name="srcCompat">@drawable/game_begin_background</item>
    </style>

    <style name="QuizGameTheme" parent="AppTheme">
        <item name="mainNavigationMode">None</item>
    </style>
</resources>