<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ContentItems.Cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/content_details_internal_padding"
    android:paddingTop="@dimen/content_details_internal_padding">

    <com.krake.core.media.widget.LoadableImageView
        android:id="@+id/cellImageView"
        style="@style/ContentItems.Cell.Image.Event" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cellTextView"
            style="@style/ContentItems.Cell.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="left|start"
            android:maxLines="2"
            android:textColor="?attr/colorPrimary"
            tools:text="Prova titolo" />

        <include layout="@layout/partial_event_dates" />
    </LinearLayout>
</LinearLayout>