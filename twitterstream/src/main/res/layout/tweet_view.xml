<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <RelativeLayout
        android:id="@+id/tweet_container"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <com.krake.core.media.widget.LoadableImageView
            android:id="@+id/tweet_author_avatar_image_view"
            android:layout_alignParentStart="true"
            style="@style/TweetAvatarImageView"
            tools:src="#CCCCCC" />

        <TextView
            android:id="@+id/tweet_author_full_name_text_view"
            android:layout_toEndOf="@id/tweet_author_avatar_image_view"
            android:layout_alignTop="@id/tweet_author_avatar_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TweetAuthorFullName"
            tools:text="Turismo Milano"/>

        <TextView
            android:id="@+id/tweet_author_screen_name_text_view"
            android:layout_toEndOf="@id/tweet_author_full_name_text_view"
            android:layout_alignBaseline="@id/tweet_author_full_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TweetAuthorScreenName"
            tools:visibility="visible"
            tools:text="Turismo Milano "/>

        <ImageView
            android:id="@+id/tweet_logo_image_view"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tweet_author_full_name_text_view"
            android:layout_height="@dimen/tweet_logo_height"
            android:layout_width="@dimen/tweet_logo_width"
            style="@style/TwitterLogo"
            app:srcCompat="@drawable/ic_twitter_logo"/>

        <TextView
            android:id="@+id/tweet_text_text_view"
            android:layout_below="@id/tweet_author_full_name_text_view"
            android:layout_alignStart="@id/tweet_author_full_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TweetText"
            tools:visibility="visible"
            tools:text="Turismo Milano Turismo Milano Turismo Milano Turismo Milano Turismo Milano Turismo Milano Turismo Milano Turismo Milano Turismo Milano Turismo Milano Turismo Milano"/>

    </RelativeLayout>

</ScrollView>




